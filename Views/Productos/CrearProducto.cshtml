@section Scripts{<partial name="_ValidationScriptsPartial"/>}
<div class="container">
  <h1 class="text-center">Agregar Producto</h1>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <a class="btn btn-danger" asp-area="" asp-controller="Productos" asp-action="ListarProductos"><i class="bi bi-arrow-left"></i> Volver</a>
    <form asp-action="Crear" asp-controller="Productos" method="post" class="w-50">
      <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <input type="text" name="Descripcion" class="form-control"  maxlength="250" required>
      </div>
      <div class="form-group">
        <label for="precio">Precio</label>
        <input type="number" name="Precio" class="form-control" min="1" required>
      </div>
      <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Crear Producto</button>
      </div>
    </form>
  </div>
</div>