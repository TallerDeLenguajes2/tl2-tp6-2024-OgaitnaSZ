@model List<Cliente>

<div class="container">
    <h1 class="display-4 text-center">Listado de Clientes</h1>
    <div class="d-flex flex-column justify-content-center align-items-center">
    <a class="btn btn-success" asp-area="" asp-controller="Clientes" asp-action="CrearCliente">Agregar Cliente</a>
        <table class="table w-50">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefono</th>
                    <th scope="col" class="text-center">Modificar</th>
                    <th scope="col" class="text-center">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model){
                    <tr>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Telefono</td>
                        <td class="text-center"><a asp-area="" asp-controller="Clientes" asp-action="ModificarCliente" asp-route-id="@cliente.Idcliente"><i class="bi bi-pencil-square"></i></a></td>
                        <td class="text-center"><a asp-area="" asp-controller="Clientes" asp-action="EliminarCliente" asp-route-id="@cliente.Idcliente"><i class="bi bi-trash3"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>    
    </div>
</div>
