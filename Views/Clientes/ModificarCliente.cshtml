@model tl2_tp6_2024_OgaitnaSZ.Models.Cliente;
<div class="container">
  <h1 class="text-center">Modificar Cliente</h1>
    <div class="d-flex flex-column justify-content-center align-items-center">
      <a class="btn btn-danger" asp-area="" asp-controller="Clientes" asp-action="ListarClientes"><i class="bi bi-arrow-left"></i> Volver</a>
      <form asp-action="Modificar" asp-controller="Clientes" method="post" class="w-50">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" name="Nombre" class="form-control" value="@Model.Nombre">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" name="Email" class="form-control" value="@Model.Email">
        </div>
        <div class="form-group">
            <label for="Telefono">Telefono</label>
            <input type="text" name="Telefono" class="form-control" value="@Model.Telefono">
        </div>
        <input type="hidden" name="IdCliente" value="@Model.IdCliente">
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
      </form>
    </div>
</div>