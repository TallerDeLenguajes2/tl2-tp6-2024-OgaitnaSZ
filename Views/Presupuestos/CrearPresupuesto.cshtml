<div class="container">
  <h1 class="text-center">Crear Presupuesto</h1>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <a class="btn btn-danger" asp-area="" asp-controller="Presupuestos" asp-action="ListarPresupuestos"><i class="bi bi-arrow-left"></i> Volver</a>
    <form asp-action="Crear" asp-controller="Presupuestos" method="post" class="w-50">
      <div class="form-group">
        <label for="NombreDestinatario">Nombre del Destinario</label>
        <input type="text" name="NombreDestinatario" class="form-control">
      </div>
      <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
      </div>
    </form>
  </div>
</div>