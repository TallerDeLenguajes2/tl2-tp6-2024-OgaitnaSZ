@model List<Cliente>

<div class="container">
  <h1 class="text-center">Crear Presupuesto</h1>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <a class="btn btn-danger" asp-area="" asp-controller="Presupuestos" asp-action="ListarPresupuestos"><i class="bi bi-arrow-left"></i> Volver</a>
    <form asp-action="Crear" asp-controller="Presupuestos" method="post" class="w-50">
      <div class="form-group">
        <label for="NombreDestinatario">Cliente:</label>
        <select class="form-select" name="IdCliente">
          @foreach (var cliente in Model){
            <option value="@cliente.IdCliente">@cliente.Nombre</option>
          }
        </select>
      </div>
      <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
        <a asp-controller="Clientes" asp-action="CrearCliente">Crear nuevo cliente</a>
      </div>
    </form>
  </div>
</div>