@model ViweModelPresupuestos

<div class="container">
    <h1 class="display-4 text-center">Presupuestos</h1>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <a class="btn btn-success" asp-area="" asp-controller="Presupuestos" asp-action="CrearPresupuesto">Agregar Presupuesto</a>
        <table class="table w-50">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Destinatario</th>
                    <th scope="col" class="text-center">Fecha</th>
                    <th scope="col" class="text-center">Ver Detalle</th>
                    @if(Model.Rol == "Administrador"){<th scope="col" class="text-center">Eliminar</th>}
                </tr>
            </thead>
            <tbody>
                @foreach (var presupuesto in Model.Presupuestos){
                    <tr>
                        <td>@presupuesto.Cliente.Nombre</td>
                        <td class="text-center">@presupuesto.FechaCreacion.ToShortDateString()</td>
                        <td class="text-center"><a asp-area="" asp-controller="Presupuestos" asp-action="PresupuestoDetalle" asp-route-id="@presupuesto.IdPresupuesto"><i class="bi bi-card-list"></i></a></td>
                        @if(Model.Rol == "Administrador"){<td class="text-center"><a asp-area="" asp-controller="Presupuestos" asp-action="EliminarPresupuesto" asp-route-id="@presupuesto.IdPresupuesto"><i class="bi bi-trash3"></i></a></td>}
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
