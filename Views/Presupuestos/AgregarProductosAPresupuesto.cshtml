@model ViewModelNuevoPresupuesto
<div class="container">
  <h2>Seleccione un producto a agregar:</h2>
  <div class="container text-center">
    <a class="btn btn-danger" asp-controller="Presupuestos" asp-action="PresupuestoDetalle" asp-route-id="@Model.idPresupuesto"><i class="bi bi-arrow-left"></i> Volver</a>
    <a class="btn btn-success" asp-area="" asp-controller="Productos" asp-action="CrearProducto">Agregar Nuevo Producto</a>
  </div>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <form asp-action="Agregar" asp-controller="Presupuestos" method="post" class="w-50">
      <label for="idProducto">Seleccione un producto:</label>
      <h2>Seleccion productos para agregar al presupuesto</h2>
        @foreach (var producto in Model.productos){
          <div class="form-check">
              <input class="form-check-input" type="checkbox" name="idProductos" value="@producto.IdProducto">
              <label class="form-check-label">
                  @producto.Descripcion | $@producto.Precio
              </label>
              <input type="number" name="cantidades" min="1" class="form-control" placeholder="Cantidad">
          </div>
        }
      <input type="hidden" name="idPresupuesto" value="@Model.idPresupuesto" class="form-control">
      <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Agregar al Presupuesto</button>
      </div>
    </form>
  </div>
</div>